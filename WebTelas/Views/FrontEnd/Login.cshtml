@model WebTelas.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="design-w3l">
    <div class="mail-form-agile row">
        <form action="#" method="post">
            <h1>mundo</h1>
            <div class="form-group">
            <div>
            hola mundo
            </div>
                <h2>@Html.DisplayNameFor(Model => Model.Nombre)</h2>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <h3>@Html.DisplayNameFor(Model => Model.Contra)</h3>
                @Html.EditorFor(model => model.Contra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contra, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <p>&nbsp;</p>
                @*               Texto    Action   Ctrl        objeto con los datos *@
                @Html.ActionLink("Login", "Login", "Session", new { @class = "btn btn-primary btn-lg" })
            </div>
            <input type="submit" value="Entrar">
        </form>
    </div>
    <div class="clear"> </div>
</div>
